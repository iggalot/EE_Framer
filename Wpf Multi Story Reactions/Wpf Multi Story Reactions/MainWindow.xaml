<Window x:Class="MultiStoryReactions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multi-Story Plan View Visualizer" Height="700" Width="1200">
    <Grid>
        <!-- Left Panel: Controls -->
        <StackPanel Width="250" HorizontalAlignment="Left" Margin="10">
            <TextBlock Text="Structural Members" FontWeight="Bold" Margin="0,0,0,5"/>
            <DataGrid x:Name="MemberGrid" Height="200" AutoGenerateColumns="True" CanUserAddRows="False"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <Button x:Name="BtnAddMember" Content="Add Member" Width="100" Click="BtnAddMember_Click"/>
                <Button x:Name="BtnRemoveMember" Content="Remove" Width="100" Margin="5,0,0,0" Click="BtnRemoveMember_Click"/>
            </StackPanel>

            <Button x:Name="BtnCompute" Content="Compute Reactions" Width="200" Click="BtnCompute_Click"/>

            <TextBlock Text="Reactions" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="TxtResults" Height="150" Width="220" TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Legend -->
            <TextBlock Text="Legend:" FontWeight="Bold" Margin="0,10,0,0"/>
            <StackPanel Margin="5,0,0,0">
                <TextBlock Text="Blue: Beam"/>
                <TextBlock Text="Dark Blue: Girder"/>
                <TextBlock Text="Brown: Wall"/>
                <TextBlock Text="Green: Purlin"/>
                <TextBlock Text="Orange: Column"/>
                <TextBlock Text="Dashed Line: Cantilever"/>
            </StackPanel>

            <!-- Floor selection -->
            <TextBlock Text="Select Floor for Placement:" FontWeight="Bold" Margin="0,10,0,0"/>
            <ComboBox x:Name="FloorSelector" SelectedIndex="0">
                <ComboBoxItem Content="Floor 1"/>
                <ComboBoxItem Content="Floor 2"/>
                <ComboBoxItem Content="Roof"/>
            </ComboBox>
        </StackPanel>

        <!-- Right Panel: Floor Plan Tabs -->
        <TabControl x:Name="FloorTabs" Margin="270,10,10,10">
            <TabItem Header="Floor 1">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="Floor1Canvas" Background="LightGray" Width="2000" Height="2000"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Floor 2">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="Floor2Canvas" Background="LightGray" Width="2000" Height="2000"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Roof">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="RoofCanvas" Background="LightGray" Width="2000" Height="2000"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
